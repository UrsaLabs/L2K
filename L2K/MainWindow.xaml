        </StackPanel>
        <Button x:Name="hideButton" Content="Hide" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="learnButton" Content="Learn" HorizontalAlignment="Left" Margin="352,10,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False"/>
        <tb:TaskbarIcon x:Name="tIcon" IconSource="/Icons/l2kicon.ico" ToolTipText="Launchpad2Keyboard" Visibility="Collapsed" MenuActivation="LeftOrRightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show app" Command="{Commands:ShowApp}" CommandParameter="{Binding}"/>
                    <MenuItem Header="Exit" Command="{Commands:ExitApp}" CommandParameter="{Binding}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="332,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="243" Width="175"><Run Text="Welcome to L2K."/><LineBreak/><Run Text="This tool enables you to map your Launchpad buttons to key strokes and shortcuts. It was originally developed to enable control of XSplit Twitch stream but can be used for any software listening for keyboard hotkey events."/><LineBreak/><Run/><LineBreak/><Run Text="Bugs or issues? Feel free to contribute on "/><LineBreak/><Run Text="github.com/UrsaLabs/L2K"/></TextBlock>
